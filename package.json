{
  "name": "uiutils",
  "version": "1.0.0",
  "description": "an indie ui development toolkit",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf build public/build",
    "dev:css": "postcss app/styles/app.css --dir public/styles -w",
    "build:css": "postcss app/styles/app.css --dir public/styles --env production",
    "dev": "concurrently \"npm run clean\" \"npm run dev:css\" \"remix dev\"",
    "build": "npm run clean && npm run build:css && remix build",
    "deploy": "npm run build && vercel --prod"
  },
  "dependencies": {
    "@remix-run/node": "^1.7.2",
    "@remix-run/react": "^1.7.2",
    "@remix-run/vercel": "^1.7.2",
    "@vercel/node": "^2.4.4",
    "daisyui": "^2.31.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.1.8"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.2",
    "@remix-run/eslint-config": "^1.7.2",
    "@remix-run/serve": "^1.7.2",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "autoprefixer": "^10.4.12",
    "concurrently": "^7.4.0",
    "cssnano": "^5.1.13",
    "eslint": "^8.23.1",
    "postcss": "^8.4.16",
    "postcss-cli": "^10.0.0",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-import": "^15.0.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "stylelint": "^14.13.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended": "^9.0.0",
    "typescript": "^4.7.4",
    "vercel": "^28.4.2"
  }
}
